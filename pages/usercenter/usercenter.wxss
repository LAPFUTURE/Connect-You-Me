.usercenter {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    box-sizing: border-box;
  }
.img{
    width: 100%;
}
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    left: 42%;
    top: 16%;
    
  }
  
  .userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
  
  .userinfo-nickname {
    color: #aaa;
  }
  
  .usermotto {
    margin-top: 200px;
  }