.usercenter {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    box-sizing: border-box;
  }
.img{
    width: 100%;
}
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    left: 42%;
    top: 16%;
    
  }
  
  .userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
  
  .userinfo-nickname {
    color: #aaa;
  }
  
  .usermotto {
    margin-top: 200px;
  }
  .usershow{
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .useritem{
    text-align:center;
    width: 350rpx;
    margin:10rpx auto;
    padding:20rpx;
    border:1px solid rgb(194,194,194);
    box-shadow:1px 1px 5px rgb(240,240,240);
    background:rgb(247,247,247);
    border-radius: 8px;
  }
  .icon{
    float:right;
    width: 40rpx;
    height: 40rpx;
  }